doctype html
html(lang="es")
  //- Los bloques determinan áreas que se pueden sobre escribir
  block config 
    //- Llamar a las varibles de configuración y al mixin de utilitarios
    include ../config/config
    include ../config/mixins.pug 
  head 
    block head 
      meta(charset="UTF-8")/
      title= page_title + " | " + page 
      meta(http-equiv="X-UA-Compatible", content="IE=edge")/
      meta(name="viewport", content="width=device-width, initial-scale=1.0")/
      meta(name="description" content="descripción de la página, si se desea cambiar se debería tener variables en el config")

      //- CSS - en este proceso se optimiza en la carpeta assets/css-optimizado, se debe redirigir a este link y volver a generar todas las páginas.
      link(rel="stylesheet", href="/dist/css/estilos.css")
      link(rel="stylesheet", href="/dist/assets/fontawesome-free-6.4.0-web/css/all.css")

      //- Scripts

  body 
    //- He asignado una barra de navegación fija arriba con sombra
    header.shadow
      block preheader 
        include ../blocks/preheader 
      block header 
        include ../blocks/header
    main 
      //- Se determinan áreas con nombres para posteriormente sobre escribir aunque este es un orden no implica necesariamente este tipo de contenido
      block galeria 
      block productos 
      block servicios 
      block noticias 
      block eventos 
      block destacados 
      block otros 
    section 
      block contenido 
    footer.container-fluid.text-white
      .row 
        block footer 
          include ../blocks/footer 
    block scripts 
      include ../blocks/scripts 